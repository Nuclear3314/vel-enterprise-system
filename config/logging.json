{
    "version": 1,
    "disable_existing_loggers": false,
    "handlers": {
        "file": {
            "class": "logging.FileHandler",
            "filename": "logs/recovery/error_recovery.log",
            "formatter": "detailed"
        }
    },
    "formatters": {
        "detailed": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },
    "root": {
        "level": "INFO",
        "handlers": ["file"]
    }
}
